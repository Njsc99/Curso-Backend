<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{#if title}}{{title}} - {{/if}}E-Commerce Backend</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  
  <!-- SweetAlert2 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.min.css" rel="stylesheet">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <!-- Meta tags -->
  <meta name="description" content="E-Commerce Backend - Sistema de gestión de productos y carritos">
  <meta name="keywords" content="ecommerce, productos, carritos, compras">
  <meta name="author" content="E-Commerce Backend">
  
  {{{head}}}
</head>
<body>
  <!-- Navegación principal -->
  {{> nav}}
  
  <!-- Contenido principal -->
  <main>
    {{{body}}}
  </main>
  
  <!-- Footer -->
  {{> footer}}
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- SweetAlert2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.all.min.js"></script>
  
  <!-- Socket.io para páginas que lo necesiten -->
  {{#if useSocket}}
  <script src="/socket.io/socket.io.js"></script>
  {{/if}}
  
  <!-- Scripts personalizados -->
  <script src="/js/index.js"></script>
  
  <!-- Scripts adicionales -->
  {{{scripts}}}
</body>
</html>